<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center my-3" style="border:none;">
                <div class="card-body">
                    <h3>En Home</b></h3>
                </div>
                <nav>
                    <ul>
                        <button class="btn btn-primary"><a href="/" style="color:white;">Characters</a></button>
                        <button class="btn btn-primary"><a href="/episodes" style="color:white;">Episodes</a></button>
                        <button class="btn btn-primary"><a href="/locations" style="color:white;">Locations</a></button>
                    </ul>
                </nav>
            </div>  
        </div>
      </div>

      <div class="row">
        {{#if error}}
            <p>Error: {{error}}</p>
        {{/if}}

        {{#each data}}
            <div class="col-md-3">
                <div class="card" style="margin: 10px;">
                    <img class="card-img-top" src={{image}}>
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{type}}</p>
                        <a href={{url}} class="btn btn-primary">Go</a>
                    </div>
                </div>
            </div>
        {{/each}}

      </div>

    </div>
</div>